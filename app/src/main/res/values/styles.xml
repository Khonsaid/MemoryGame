<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogSlideAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
    <style name="style_nav_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:fontFamily">@font/jungle_adventurer</item>
        <item name="android:textColor">@color/light_pink</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">@color/dark_pink</item>
    </style>
</resources>